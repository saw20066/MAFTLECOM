@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<details class="dropdown">
    <summary class="btn text-white" style="background-color: transparent; border: none;">Manage Account <i class="fas fa-caret-down"></i></summary>
    <div class="w3breadcrumb-right">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-white @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                    <i class="fas fa-user-circle mr-2 "></i> Profile
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
                    <i class="fas fa-envelope mr-2 "></i> Email
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                    <i class="fas fa-lock mr-2 "></i> Password
                </a>
            </li>
            @if (hasExternalLogins)
            {
                <li id="external-logins" class="nav-item">
                    <a id="external-login" class="nav-link  text-white @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">
                        <i class="fas fa-external-link-alt mr-2 "></i> External Logins
                    </a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link text-white @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
                    <i class="fas fa-key mr-2 "></i> Two-factor Authentication
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white @ManageNavPages.PersonalDataNavClass(ViewContext) " id="personal-data" asp-page="./PersonalData">
                    <i class="fas fa-user mr-2 "></i> Personal Data
                </a>
            </li>
            @if (!User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" href="/UserOrder/UserOrders">

                        <i class="fas fa-shopping-bag text-info mr-2"></i> My Orders
                    </a>
                </li>
            }
        </ul>
    </div>
</details>
