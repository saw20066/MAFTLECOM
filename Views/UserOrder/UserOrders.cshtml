@model IEnumerable<Order>
@{
    ViewData["Title"] = "My Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="inner-banner py-5 pb-sm-0">
    <section class="w3l-breadcrumb text-left py-sm-5 pb-0">
        <div class="container">
            <div class="w3breadcrumb-gids">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> @ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</div>


<section class="w3l-subscribe-content py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
            @if (Model != null && Model.Any())
            {
                @foreach (var order in Model)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            Order Date: @order.CreateDate.ToString("dd-MM-yyyy")
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Image</th>
                                        <th>Unit Price (INR)</th>
                                        <th>Quantity</th>
                                        <th>Total Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in order.OrderDetail)
                                    {
                                        <tr>
                                            <td>@item.Product.Name</td>
                                            <td>
                                                @if (string.IsNullOrEmpty(item.Product.ImageURL))
                                                {
                                                    <img src="/images/NoImage.png" style="width:80px;height:100px" />
                                                }
                                                else
                                                {
                                                    <img src="/images/@item.Product.ImageURL" style="width:80px;height:100px" />
                                                }
                                            </td>
                                            <td>@item.Product.Price</td>
                                            <td>@item.Quantity</td>
                                                <td>@(item.Product.Price * item.Quantity) €</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="4" class="text-end">Total:</td>
                                        <td>@(order.OrderDetail.Sum(item => item.Product.Price * item.Quantity)) €</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    No orders found.
                </div>
            }
              <a href="/Identity/Account/Manage" class="btn btn-primary mt-3">Back</a>
        </div>
    </div>
</div>
</section>