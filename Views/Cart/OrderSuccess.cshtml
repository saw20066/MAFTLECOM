@{
    ViewData["Title"] = "Order Success";
}


<div class="inner-banner py-5 pb-sm-0">
    <section class="w3l-breadcrumb text-left py-sm-5 pb-0">
        <div class="container">
            <div class="w3breadcrumb-gids">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> @ViewData["Title"]</li>

                    </ul>
                </div>
            </div>

        </div>
    </section>
</div>
<section class="w3l-content-6 py-5 text-center d-flex align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
    <div class="container py-md-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-4 mb-4">Service Successfully Booked</h1>
                <p class="lead mb-4">Thank you for choosing our services!</p>
                <p>We've received your booking request and will get back to you shortly to confirm the details.</p>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</section>

